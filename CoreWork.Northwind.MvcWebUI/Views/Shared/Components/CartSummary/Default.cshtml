@model CoreWork.Northwind.MvcWebUI.Models.CartSummaryViewModel

<div class="dropdown-menu" aria-labelledby="navbarDropdown">
    @foreach (var product in Model.Cart.CartLines)
    {
        <a class="dropdown-item" href="#">@product.Product.ProductName - <span class="badge badge-secondary">@product.Quantity</span> - @product.Product.UnitPrice ₺</a>
    }

    <div class="dropdown-divider"></div>
    <a class="dropdown-item" href="#"><i class="fa fa-shopping-cart">
</i>@Model.Cart.Total ₺</a>
    <div class="dropdown-divider"></div>
    <a class="dropdown-item" asp-controller="Cart" asp-action="List">Go to cart details</a>
</div>